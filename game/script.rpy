    def _show_emote(prefix, emote, pos):
        img = f"{prefix} {emote}"

        if pos == "left":
            at_list = [left_pos]
        elif pos == "right":
            at_list = [right_pos]
        else:
            at_list = []

        renpy.show(img, at_list=at_list)

